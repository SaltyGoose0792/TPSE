// Simple ULN / LED test with explicit channel â†” pin mapping
// YOU decide which channel number maps to which Arduino pin.

void testChannel(int channelNumber, int pin) {
  Serial.print("Channel ");
  Serial.print(channelNumber);
  Serial.print(" (Arduino D");
  Serial.print(pin);
  Serial.println(") -> ON");

  digitalWrite(pin, HIGH);
  delay(2000);

  Serial.print("Channel ");
  Serial.print(channelNumber);
  Serial.print(" (Arduino D");
  Serial.print(pin);
  Serial.println(") -> OFF");

  digitalWrite(pin, LOW);
  delay(1000);

  Serial.println();
}

void setup() {
  Serial.begin(9600);
  Serial.println("=== ULN BOARD OUTPUT TEST START ===");

  // Set all pins you use as outputs
  pinMode(8, OUTPUT);
  pinMode(9, OUTPUT);
  pinMode(10, OUTPUT);
  pinMode(11, OUTPUT);

  digitalWrite(8, LOW);
  digitalWrite(9, LOW);
  digitalWrite(10, LOW);
  digitalWrite(11, LOW);
}

void loop() {
  // EDIT ONLY THESE FOUR LINES TO MATCH YOUR REALITY
  testChannel(2, 8);   // Channel 2 = D8
  testChannel(3, 9);  // Channel 3 = D9
  testChannel(4, 10);  // Channel 4 = D10
  testChannel(1, 11);   // Channel 1 = D11

  // If your mapping is different, just change the numbers above.
}
